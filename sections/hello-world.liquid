{% comment %}
  Welcome to Shopify theme development!
{% endcomment %}

<div class="welcome full-width">
  <div class="welcome-content">
    <div>
      <h1>{{ section.settings.welcome_message }}</h1>
    </div>    
  </div>
</div>

<h2
  class="products-heading"
>{{ section.settings.best_products_heading }}</h2>

<div class="featured-products">
  {% assign collection_handle = section.settings.best_products_collection %}
  {% if collection_handle != blank %}
    {% assign collection = collections[collection_handle] %}
    {% if collection != nil %}
      {% render 'product-grid', collection: collection, limit: 3 %}
    {% else %}
      <p>No collection found with the handle '{{ collection_handle }}'.</p>
    {% endif %}
  {% else %}
    <p>Please select a collection in the section settings.</p>
  {% endif %}
  
</div>

{% stylesheet %}
  .products-heading {    
    margin-top: 3rem;
    font-size: 1.5rem;  
  }
  .welcome {
    display: grid;
    grid-template-columns: var(--content-grid);
    background-color: #f6f6f7;
    padding: 72px 0;
  }

  .welcome-content {
    grid-column: 2;
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
    width: 100%;
    padding: 0 24px;
  }

  .welcome-description {
    max-width: 80ch;
    line-height: 1.4;
    margin-top: 1.5rem;
  }

  .icon {
    width: 300px;
  }

  .highlights {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(3, 1fr);
    margin-top: 50px;
  }

  @media (max-width: 1100px) {
    .highlights {
      grid-template-columns: 1fr;
    }

    .welcome-content {
      flex-direction: column;      
    }
  }

  .highlight {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 24px;
    border-radius: 8px;
    background-color: #eef3ff;
    color: rgb(92, 95, 98);
    line-height: 1.4;
  }

  .highlight > * + * {
    margin-top: 1rem;
  }

  .highlight h3 {
    font-size: 1rem;
    color: rgb(32, 34, 35);
  }

  .highlight-description {
    flex: 1 1;
  }

  .highlight a {
    display: flex;
    width: fit-content;
    background-color: rgb(250, 251, 251);
    box-shadow: rgba(0, 0, 0, 0.2) 0px -3px 0px 0px inset, rgba(255, 255, 255, 0.9) 0px 2px 0px 0px inset;
    border: 1px solid rgb(140, 145, 150);
    border-radius: 4px;
    color: rgb(92, 95, 98);
    padding: 3px 10px 5px;
    text-decoration: none;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hello World",
  "settings": [
    {
      "type": "text",
      "label": "Welcome Message",
      "id": "welcome_message",
      "default": "Welcome to my Shopify Online Store!"
    },
    {
      "type": "text",
      "label": "Best Products Heading",
      "id": "best_products_heading",
      "default": "Have a look to our best products"
    },
    {
      "type": "collection",
      "label": "Best Products Collection",
      "id": "best_products_collection",      
    }
  ],
  "presets": [
    {
      "name": "Hello World Template",
      "category": "Demo"
    }
  ],
  "blocks": [
    {
      "type": "highlight",
      "name": "Highlight"
    }
  ]
}
{% endschema %}
