{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

<h1>{{ 'cart.title' | t }}</h1>

<form action="{{ routes.cart_url }}" method="post">
  <table class="cart-table">
    {% for item in cart.items %}
      <tr class="cart-item">
        <td class="cart-item__image">
          {% render 'image', image: item.image, url: item.url %}
        </td>
        <td class="cart-item__info">
          <p>{{ item.product.title }}</p>
          <div>{{ item.final_line_price | money }}</div>
          <div class="cart_item__remove">{{ 'cart.remove' | t | link_to: item.url_to_remove, class: 'cart_item__remove_text' }}</div>          
        </td>
        <td class="cart-item__quantity">
          <input type="text" name="updates[]" value="{{ item.quantity }}">
          <input type="submit" value="{{ 'cart.update' | t }}">
        </td>
      </tr>
    {% endfor %}
  </table>

  <input type="submit" name="checkout" value="{{ 'cart.checkout' | t }}" class="cart-checkout-button">
</form>

{% stylesheet %}
  .cart-table {
    width: 100%;
    border-collapse: collapse;
  }

  .cart-item {
    border-bottom: 1px solid #e5e5e5;
  }

  .cart-item td {
    padding: 1rem;
  }

  .cart-item p {
    margin: 0;
  }

  .cart-item input[type="text"] {
    width: 60px;
    padding: 0.5rem;
    font-size: 1rem;
  }

  .cart-item input[type="submit"] {
    background-color: #000;
    color: #fff;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }

  .cart-item input[type="submit"]:hover {
    background-color: #333;
  }

  .cart-item__image {
    width: 80px;
  }

  .cart-item__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .cart-item__info {
    width: 60%;
  }

  .cart-item__quantity {
    width: 20%;
  }

  .cart_item__remove {
    color: white;
    text-decoration: none;
    font-size: 0.875rem;
    background-color: #ff0000;
    padding: 0.4rem 0.6rem;
    margin-top: 0.5rem;
    width: fit-content;
  }

  .cart-item__remove_text {
    color: white;
    text-decoration: none;
  }

  .cart-checkout-button {
    background-color: #000;
    color: #fff;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    margin-top: 1rem;
  }

  .cart-checkout-button:hover {
    background-color: #333;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.cart",
  "settings": []
}
{% endschema %}
