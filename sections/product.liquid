{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

<div class="product-images">
  {% for image in product.images %}
    {% render 'image', class: 'product-image', image: image %}
  {% endfor %}
</div>

<div class="product-info">
  <h1>{{ product.title }}</h1>
  <p>{{ product.price | money }}</p>
  <p>{{ product.description }}</p>
</div>

<div class="product-form">
  {% form 'product', product %}
    {% assign current_variant = product.selected_or_first_available_variant %}

    <select name="id" class="product-variants">
      {% for variant in product.variants %}
        <option
          value="{{ variant.id }}"
          {% if variant == current_variant %}
            selected="selected"
          {% endif %}
        >
          {{ variant.title }} - {{ variant.price | money }}
        </option>
      {% endfor %}
    </select>

    <input type="text" name="quantity" min="1" value="1" class="product-quantity">

    <input type="submit" value="Add to cart" class="product-add-to-cart">
    {{ form | payment_button }}
  {% endform %}
</div>

{% stylesheet %}
  .product-images {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 1rem;
  }

  .product-image {
    max-width: 500px;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
  }

  .product-info {
    margin-top: 2rem;
  }

  .product-form {
    margin-top: 2rem;
  }

  .product-variants {
    margin-bottom: 1rem;
    padding: 0.5rem;
    font-size: 1rem;
  }

  .product-add-to-cart {
    background-color: #000;
    color: #fff;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }
  
  .product-quantity {
    width: 60px;
    padding: 0.5rem;
    font-size: 1rem;
    margin-right: 1rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.product",
  "settings": [],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
